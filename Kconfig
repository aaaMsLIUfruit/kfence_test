config TESTING_KFENCE
	tristate "Kfence validity test"
	depends on MM_KFENCE
	default n
	---help---
		Enable the Kfence validity test

if TESTING_KFENCE

config TESTING_KFENCE_PRIORITY
	int "Kfence test priority"
	default 101

config TESTING_KFENCE_STACKSIZE
	int "Kfence test stack size"
	default 8192

config TESTING_KFENCE_PERF_HEAP_SIZE
	int "Kfence test heap size"
	default 1024000

config TESTING_KFENCE_PERF_CYCLES
	int "Kfence test performance cycles"
	default 4096

endif
